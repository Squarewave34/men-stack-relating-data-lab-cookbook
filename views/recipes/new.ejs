<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Add a new recipe</h1>


  <form method="post" action="/recipes">
    <label for="name">Name of recipe:</label>
    <input type="text" name="name" id="name" />
    
    <br>
    <br>
    
    <label for="instructions">Instructions:</label>
    <input type="text" name="instructions" id="instructions" />
    
    <br>
    <br>
    
    <label>Add ingredients</label>

    <br>
    <% ingredient.forEach((ing)=>{ %>
      <label for="ingredients"><%= ing.name %></label>
      <input type="checkbox" name="ingredients" id="<%= ing._id %>" value="<%= ing._id %>" />
    <% }) %>
    <br>
    <br>
    
    <button type="submit">Add Recipe</button>
  </form>

  <br>
  <br>

  <form method="post" action="/ingredients/quickAddition">
    <label for="name">Name of ingredient:</label>
    <input type="text" name="name" id="name" />
  
    <button type="submit">Add ingredient</button>
  </form>

</body>
</html>